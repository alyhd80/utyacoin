  <style>
    #main-header {
      top: 0;
      left: 0;
      width: 100%;
      height: 60px;
      color: white;
        font-family: 'Fredoka One', cursive, sans-serif;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 20px;
      box-sizing: border-box;
      z-index: 3000;
      opacity: 0;
      transform: translateY(-100%);
      background-color: transparent;
      transition:
        opacity 0.5s ease,
        transform 0.5s ease,
        background-color 0.4s ease,
        backdrop-filter 0.4s ease;
    }

    #main-header.visible {
      opacity: 1;
      transform: translateY(0);
    }

    #main-header.scrolled {
      background-color: rgba(0, 0, 0, 0.4);
      backdrop-filter: blur(10px);
    }

    .header-left,
    .header-center,
 {
      display: flex;
      align-items: center;
    }



.header-right a {
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  text-decoration: none;
  font-weight: 600;
  font-size: 18px;
  cursor: pointer;
  transition: 
    transform 0.3s ease, 
    background-color 0.3s ease;
  padding: 8px 14px;
  border-radius: 8px;
}

.header-right a:hover {
  transform: scale(1.02); 
    color: white;
  background-color: rgba(255, 213, 39, 1);;
}


    .header-left {
      font-weight: bold;
      font-size: 30px;
    color: rgba(255, 213, 39, 1);

    }

    .header-center a {
      color: white;
      text-decoration: none;
      font-weight: 600;
      margin: 0 15px;
      cursor: pointer;
      font-size: 18px;
    }

 .header-right {
  font-weight: 600;
  font-size: 18px;
  cursor: pointer;
  transition: 
    transform 0.3s ease, 
    background-color 0.3s ease;
  padding: 8px 14px;
  border-radius: 8px;
}

.header-right:hover {
  transform: scale(1.12);
  background-color:rgba(255, 213, 39, 1);
}
  </style>
