<header id="main-header">
  <div class="header-left">UTYA</div>
  <div class="header-center">
    <a href="#">Block1</a>
    <a href="#">Block2</a>
    <a href="#">Block3</a>
  </div>
  <div class="header-right">Buy on Stonfi</div>

  <style>
    #main-header {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 60px;
      color: white;
      font-family: 'Fredoka One', cursive;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 20px;
      box-sizing: border-box;
      z-index: 3000;
      opacity: 0;
      transform: translateY(-100%);
      transition: opacity 0.5s ease, transform 0.5s ease;
    }

    #main-header.visible {
      opacity: 1;
      transform: translateY(0);
    }

    .header-left,
    .header-center,
    .header-right {
      display: flex;
      align-items: center;
    }

    .header-left {
      font-weight: bold;
      font-size: 24px;
    }

    .header-center a {
      color: white;
      text-decoration: none;
      font-weight: 600;
      margin: 0 15px;
      cursor: pointer;
      font-size: 18px;
    }

    .header-right {
      font-weight: 600;
      font-size: 18px;
      cursor: pointer;
    }
  </style>
</header>
