<!-- Lottie Script -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.10.2/lottie.min.js"></script>

<script>
  // Lazy load Lottie animation on visibility
  const loveContainer = document.getElementById('utya-love-lottie');
  let lovePlayer = null;

  const loveObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting && !lovePlayer) {
        lovePlayer = lottie.loadAnimation({
          container: loveContainer,
          renderer: 'svg',
          loop: true,
          autoplay: true,
          path: '/utya-love.json'
        });
        loveObserver.unobserve(loveContainer);
      }
    });
  }, { threshold: 0.4 });

  loveObserver.observe(loveContainer);

  // Lazy show PNG image when footer appears
  const endImage = document.getElementById('utya-end-image');
  const endObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        endImage.style.display = 'block';
        endObserver.unobserve(endImage);
      }
    });
  }, { threshold: 0.1 });

  endObserver.observe(document.getElementById('utya-footer'));
</script>
